---
import Layout from '../layouts/Layout.astro';
import Header from '@components/layout/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '@components/layout/Footer.astro';
import ScrollAnimator from '../components/ScrollAnimator.astro';
import HeaderController from '@components/layout/HeaderController.astro';
import { societies } from '../utils/societyData';
import '../styles/global.css';
---

<Layout>
  <Header />
  <main>
    <Hero />

    <!-- About Our Department Section -->
    <section
      class="py-20 bg-gradient-to-br from-gray-900 via-gray-950 to-black relative overflow-hidden"
    >
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Text Content -->
          <div class="space-y-6">
            <div class="inline-block">
              <span
                class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-4 py-2 rounded-full text-sm font-semibold"
              >
                Excellence in Education
              </span>
            </div>
            <h2 class="text-4xl lg:text-5xl font-bold text-white leading-tight">
              Shaping the
              <span
                class="bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent"
              >
                Future of Technology
              </span>
            </h2>
            <p class="text-xl text-gray-300 leading-relaxed">
              Our Computer Science Department combines cutting-edge research,
              innovative teaching methods, and strong industry partnerships to
              prepare students for tomorrow's technological challenges.
            </p>
            <div class="grid grid-cols-2 gap-6 mt-8">
              <div class="space-y-2">
                <div class="text-2xl font-bold text-blue-400">180+</div>
                <div class="text-gray-400">Research Publications</div>
              </div>
              <div class="space-y-2">
                <div class="text-2xl font-bold text-purple-400">500+</div>
                <div class="text-gray-400">Alumni Network</div>
              </div>
            </div>
            <div class="pt-4">
              <a
                href="/about"
                class="inline-flex items-center bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white px-8 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 group"
              >
                Learn More About Us
                <svg
                  class="w-5 h-5 ml-2 transform transition-transform group-hover:translate-x-1"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>

          <!-- Department Image -->
          <div class="relative">
            <div
              class="relative rounded-2xl overflow-hidden shadow-2xl transform rotate-2 hover:rotate-0 transition-transform duration-500"
            >
              <img
                src="/dept.webp"
                alt="Computer Science Department - Modern facilities and collaborative learning spaces"
                class="w-full h-[500px] object-cover"
                loading="lazy"
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"
              >
              </div>
            </div>

            <!-- Floating Elements -->
            <div
              class="absolute -top-6 -right-6 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full p-4 shadow-lg animate-pulse"
            >
              <svg
                class="w-8 h-8 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>

            <div
              class="absolute -bottom-4 -left-4 bg-gradient-to-r from-green-500 to-blue-500 rounded-xl p-3 shadow-lg"
            >
              <div class="text-white font-bold text-sm">Department Front</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Background Decoration -->
      <div
        class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-blue-500/10 to-purple-600/10 rounded-full blur-3xl"
      >
      </div>
      <div
        class="absolute bottom-0 left-0 w-64 h-64 bg-gradient-to-tr from-purple-500/10 to-pink-500/10 rounded-full blur-3xl"
      >
      </div>
    </section>

    <!-- Our Faculty Section -->
    <section class="py-20 bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-6">
            <span
              class="bg-gradient-to-r from-purple-400 to-cyan-400 bg-clip-text text-transparent"
            >
              Our Faculty
            </span>
          </h2>
          <p class="text-xl text-gray-300 max-w-2xl mx-auto">
            Meet our distinguished faculty members who are leaders in their
            respective fields
          </p>
        </div>

        <div class="flex flex-wrap gap-8 justify-center">
          <!-- Faculty Member 1 -->
          <a
            href="https://su.edu.pk/facultyprofile/129"
            target="_blank"
            class="group bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-6 hover:border-green-500/50 transition-all duration-300 transform hover:scale-105 flex-shrink-0 w-full md:w-[calc(50%-1rem)] lg:w-[calc(33.333%-1.333rem)] block"
          >
            <div
              class="w-20 h-20 bg-gradient-to-br from-green-400 to-green-600 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-10 h-10 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white text-center mb-2">
              Dr. Muhammad Ilyas
            </h3>
            <p class="text-green-300 text-center text-sm mb-4">
              Professor / Dean
            </p>
            <p class="text-gray-400 text-sm text-center mb-4">
              Information Retrieval, Knowledge Management
            </p>
            <div class="text-center">
              <span
                class="inline-flex items-center px-3 py-1 bg-green-500/20 text-green-300 text-xs rounded-full"
              >
                PhD Computer Science
              </span>
            </div>
          </a>

          <!-- Faculty Member 2 -->
          <a
            href="https://su.edu.pk/facultyprofile/546"
            target="_blank"
            class="group bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-6 hover:border-orange-500/50 transition-all duration-300 transform hover:scale-105 flex-shrink-0 w-full md:w-[calc(50%-1rem)] lg:w-[calc(33.333%-1.333rem)] block"
          >
            <div
              class="w-20 h-20 bg-gradient-to-br from-orange-400 to-orange-600 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-10 h-10 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white text-center mb-2">
              Dr. Muhammad Saad Razzaq
            </h3>
            <p class="text-orange-300 text-center text-sm mb-4">
              Assistant Professor
            </p>
            <p class="text-gray-400 text-sm text-center mb-4">
              Swarm Intelligence, Data Mining, Machine Learning, Big Data,
              Artificial Intelligence, Generative AI
            </p>
            <div class="text-center">
              <span
                class="inline-flex items-center px-3 py-1 bg-orange-500/20 text-orange-300 text-xs rounded-full"
              >
                PhD Computer Science
              </span>
            </div>
          </a>

          <!-- Faculty Member 3 -->
          <a
            href="https://su.edu.pk/facultyprofile/128"
            target="_blank"
            class="group bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-6 hover:border-purple-500/50 transition-all duration-300 transform hover:scale-105 flex-shrink-0 w-full md:w-[calc(50%-1rem)] lg:w-[calc(33.333%-1.333rem)] block"
          >
            <div
              class="w-20 h-20 bg-gradient-to-br from-purple-400 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-10 h-10 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white text-center mb-2">
              Dr. Fahad Maqbool
            </h3>
            <p class="text-purple-300 text-center text-sm mb-4">
              Assistant Professor
            </p>
            <p class="text-gray-400 text-sm text-center mb-4">
              Swarm Intelligence, Machine Learning, Large Language Models,
              Artificial Intelligence, Big Data Analytics
            </p>
            <div class="text-center">
              <span
                class="inline-flex items-center px-3 py-1 bg-purple-500/20 text-purple-300 text-xs rounded-full"
              >
                PhD Computer Science
              </span>
            </div>
          </a>
        </div>

        <div class="text-center mt-12">
          <a
            href="/about"
            class="bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 px-8 py-4 rounded-xl font-semibold transition-all duration-300 transform hover:scale-105"
          >
            View All Faculty
          </a>
        </div>
      </div>
    </section>

    <!-- Important Links (Announcements) -->
    <section class="py-20 bg-gradient-to-br from-gray-900 via-gray-950 to-black relative overflow-hidden">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-6">
            <span
              class="bg-gradient-to-r from-red-400 to-orange-500 bg-clip-text text-transparent"
            >
              Important Links & Announcements
            </span>
          </h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto">
            Stay updated with the latest announcements, deadlines, and important resources
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Announcement 1 -->
          <a
            href="/news"
            class="group bg-gradient-to-br from-red-500/10 to-orange-500/10 backdrop-blur-sm border border-red-500/30 rounded-2xl p-6 hover:border-red-400/50 transition-all duration-300 transform hover:scale-105 block"
          >
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-red-400 to-red-600 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-white group-hover:text-red-300 transition-colors">
                  Latest News & Updates
                </h3>
                <p class="text-sm text-gray-400">Stay informed</p>
              </div>
            </div>
            <p class="text-gray-300 text-sm">
              Check out the latest departmental news, events, and important announcements
            </p>
          </a>

          <!-- Announcement 2 -->
          <a
            href="https://su.edu.pk/department/cs"
            target="_blank"
            class="group bg-gradient-to-br from-blue-500/10 to-cyan-500/10 backdrop-blur-sm border border-blue-500/30 rounded-2xl p-6 hover:border-blue-400/50 transition-all duration-300 transform hover:scale-105 block"
          >
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H5m4 0V9a1 1 0 011-1h4a1 1 0 011 1v12m-6 0h6"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-white group-hover:text-blue-300 transition-colors">
                  Official Department Page
                </h3>
                <p class="text-sm text-gray-400">University Portal</p>
              </div>
            </div>
            <p class="text-gray-300 text-sm">
              Visit the official university department page for academic information
            </p>
          </a>

          <!-- Announcement 3 -->
          <a
            href="/calendar"
            class="group bg-gradient-to-br from-purple-500/10 to-pink-500/10 backdrop-blur-sm border border-purple-500/30 rounded-2xl p-6 hover:border-purple-400/50 transition-all duration-300 transform hover:scale-105 block"
          >
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-purple-600 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-white group-hover:text-purple-300 transition-colors">
                  Academic Calendar
                </h3>
                <p class="text-sm text-gray-400">Important Dates</p>
              </div>
            </div>
            <p class="text-gray-300 text-sm">
              View important academic dates, exam schedules, and semester timeline
            </p>
          </a>

          <!-- Announcement 4 -->
          <a
            href="/timetable"
            class="group bg-gradient-to-br from-green-500/10 to-emerald-500/10 backdrop-blur-sm border border-green-500/30 rounded-2xl p-6 hover:border-green-400/50 transition-all duration-300 transform hover:scale-105 block"
          >
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-green-400 to-green-600 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-white group-hover:text-green-300 transition-colors">
                  Class Timetables
                </h3>
                <p class="text-sm text-gray-400">Schedules</p>
              </div>
            </div>
            <p class="text-gray-300 text-sm">
              Check your class schedules and room assignments
            </p>
          </a>

          <!-- Announcement 5 -->
          <a
            href="/tools/study-resources"
            class="group bg-gradient-to-br from-yellow-500/10 to-amber-500/10 backdrop-blur-sm border border-yellow-500/30 rounded-2xl p-6 hover:border-yellow-400/50 transition-all duration-300 transform hover:scale-105 block"
          >
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-white group-hover:text-yellow-300 transition-colors">
                  Study Resources
                </h3>
                <p class="text-sm text-gray-400">Academic Materials</p>
              </div>
            </div>
            <p class="text-gray-300 text-sm">
              Access past papers, notes, and study materials shared by students
            </p>
          </a>

          <!-- Announcement 6 -->
          <a
            href="/tools/cgpa-calculator"
            class="group bg-gradient-to-br from-indigo-500/10 to-violet-500/10 backdrop-blur-sm border border-indigo-500/30 rounded-2xl p-6 hover:border-indigo-400/50 transition-all duration-300 transform hover:scale-105 block"
          >
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-indigo-400 to-indigo-600 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-white group-hover:text-indigo-300 transition-colors">
                  CGPA Calculator
                </h3>
                <p class="text-sm text-gray-400">Academic Tools</p>
              </div>
            </div>
            <p class="text-gray-300 text-sm">
              Calculate your CGPA and track your academic progress
            </p>
          </a>
        </div>
      </div>

      <!-- Background Decoration -->
      <div
        class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-red-500/10 to-orange-600/10 rounded-full blur-3xl"
      >
      </div>
      <div
        class="absolute bottom-0 left-0 w-64 h-64 bg-gradient-to-tr from-purple-500/10 to-pink-500/10 rounded-full blur-3xl"
      >
      </div>
    </section>

    <!-- Academic Disciplines -->
    <section class="py-20 bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950 relative overflow-hidden">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-6">
            <span
              class="bg-gradient-to-r from-cyan-400 to-teal-400 bg-clip-text text-transparent"
            >
              Academic Disciplines
            </span>
          </h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto">
            Explore our comprehensive degree programs designed to prepare you for the future of technology
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Bachelor's Degree -->
          <div class="bg-gradient-to-br from-blue-500/10 to-cyan-500/10 backdrop-blur-sm border border-blue-500/30 rounded-2xl p-8 hover:border-blue-400/50 transition-all duration-300">
            <div class="text-center mb-6">
              <div class="w-20 h-20 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-white mb-2">Bachelor's Degree (BS)</h3>
              <p class="text-blue-300 font-semibold">4-Year Program</p>
            </div>

            <div class="space-y-4">
              <div class="bg-gray-800/50 rounded-lg p-4">
                <h4 class="font-semibold text-white mb-2">üñ•Ô∏è Computer Science (CS)</h4>
                <p class="text-gray-300 text-sm">Core computing principles, algorithms, software engineering</p>
              </div>
              <div class="bg-gray-800/50 rounded-lg p-4">
                <h4 class="font-semibold text-white mb-2">ü§ñ Artificial Intelligence (AI)</h4>
                <p class="text-gray-300 text-sm">Machine learning, neural networks, intelligent systems</p>
              </div>
              <div class="bg-gray-800/50 rounded-lg p-4">
                <h4 class="font-semibold text-white mb-2">üìä Data Science (DS)</h4>
                <p class="text-gray-300 text-sm">Big data analytics, statistical modeling, data visualization</p>
              </div>
            </div>

            <div class="mt-6 pt-4 border-t border-gray-700">
              <button class="w-full bg-gradient-to-r from-blue-500 to-cyan-500 hover:from-blue-600 hover:to-cyan-600 text-white px-4 py-2 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105">
                View Study Plan
              </button>
            </div>
          </div>

          <!-- Master's Degree -->
          <div class="bg-gradient-to-br from-purple-500/10 to-violet-500/10 backdrop-blur-sm border border-purple-500/30 rounded-2xl p-8 hover:border-purple-400/50 transition-all duration-300">
            <div class="text-center mb-6">
              <div class="w-20 h-20 bg-gradient-to-br from-purple-400 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-white mb-2">Master's Degree (MS)</h3>
              <p class="text-purple-300 font-semibold">2-Year Program</p>
