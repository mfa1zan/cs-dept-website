---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import '../styles/global.css';

// Fetch content collections
const newsEntries = await getCollection('news');
const eventEntries = await getCollection('events');

// Sort news by publish date (newest first)
const sortedNews = newsEntries.sort(
  (a: CollectionEntry<'news'>, b: CollectionEntry<'news'>) =>
    b.data.publishDate.getTime() - a.data.publishDate.getTime()
);

// Get featured news
const allFeaturedNews = sortedNews.filter(
  (entry: CollectionEntry<'news'>) => entry.data.featured
);

// Randomly select one featured news article to display prominently on each page load
// This ensures different featured articles are highlighted while others appear in regular news grid
let selectedFeaturedNews: CollectionEntry<'news'> | null = null;
let remainingFeaturedNews: CollectionEntry<'news'>[] = [];

if (allFeaturedNews.length > 0) {
  const randomIndex = Math.floor(Math.random() * allFeaturedNews.length);
  selectedFeaturedNews = allFeaturedNews[randomIndex];
  remainingFeaturedNews = allFeaturedNews.filter(
    (_, index) => index !== randomIndex
  );
}

// Get upcoming events (future events only)
const upcomingEvents = eventEntries
  .filter((event: CollectionEntry<'events'>) => event.data.date >= new Date())
  .sort(
    (a: CollectionEntry<'events'>, b: CollectionEntry<'events'>) =>
      a.data.date.getTime() - b.data.date.getTime()
  );

// Get recent news for grid display (exclude the selected featured news, but include remaining featured news)
const nonFeaturedNews = sortedNews.filter(
  (entry: CollectionEntry<'news'>) => !entry.data.featured
);
const recentNews = [...remainingFeaturedNews, ...nonFeaturedNews].slice(0, 6);
