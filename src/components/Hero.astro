<section id="home" class="min-h-screen flex items-center justify-center relative overflow-hidden">
  <!-- Animated background elements -->
  <div class="absolute inset-0 grid-pattern opacity-20"></div>
  
  <!-- Floating particles -->
  <div class="absolute inset-0">
    <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-blue-400 rounded-full animate-float opacity-60"></div>
    <div class="absolute top-3/4 right-1/4 w-3 h-3 bg-purple-400 rounded-full animate-float opacity-40" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 left-3/4 w-1 h-1 bg-cyan-400 rounded-full animate-float opacity-80" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/3 right-1/3 w-2 h-2 bg-indigo-400 rounded-full animate-float opacity-50" style="animation-delay: 0.5s;"></div>
  </div>

  <!-- Gradient orbs -->
  <div class="absolute top-20 -left-40 w-80 h-80 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full opacity-20 blur-3xl animate-pulse"></div>
  <div class="absolute bottom-20 -right-40 w-96 h-96 bg-gradient-to-r from-purple-500 to-pink-600 rounded-full opacity-15 blur-3xl animate-pulse" style="animation-delay: 1s;"></div>

  <!-- Main content -->
  <div class="container mx-auto px-6 text-center relative z-10">
    <div class="animate-slide-up">
      <!-- Welcome text -->
      <div class="mb-8">
        <span class="inline-block px-4 py-2 bg-gradient-to-r from-blue-500/20 to-purple-500/20 border border-blue-500/30 rounded-full text-blue-300 text-sm font-medium mb-6">
          ðŸš€ Welcome to the Future of Computing
        </span>
      </div>

      <!-- Main heading -->
      <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">
        <span class="bg-gradient-to-r from-white via-blue-100 to-white bg-clip-text text-transparent gradient-animation">
          Computer Science
        </span>
        <br>
        <span class="bg-gradient-to-r from-blue-400 via-purple-500 to-cyan-400 bg-clip-text text-transparent gradient-animation">
          Department
        </span>
      </h1>

      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto leading-relaxed">
        Shaping the future through innovation, research, and cutting-edge technology. 
        Join us in exploring the infinite possibilities of computer science.
      </p>

      <!-- Stats -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12 max-w-2xl mx-auto">
        <div class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-xl p-6 transform hover:scale-105 transition-all duration-300">
          <div class="text-3xl font-bold bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent">650+</div>
          <div class="text-gray-400 text-sm">Students Enrolled</div>
        </div>
        <div class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-xl p-6 transform hover:scale-105 transition-all duration-300">
          <div class="text-3xl font-bold bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">1250+</div>
          <div class="text-gray-400 text-sm">Graduated Students</div>
        </div>
        <div class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-xl p-6 transform hover:scale-105 transition-all duration-300">
          <div class="text-3xl font-bold bg-gradient-to-r from-green-400 to-emerald-400 bg-clip-text text-transparent">3</div>
          <div class="text-gray-400 text-sm">Degree Programs</div>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="#societies" class="cursor-pointer">
          <button class="bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 px-8 py-4 rounded-xl font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-blue-500/25 cursor-pointer">
            Explore Societies
          </button>
        </a>
        <a href="/about" class="cursor-pointer">
          <button class="border border-gray-600 hover:border-blue-400 px-8 py-4 rounded-xl font-semibold transition-all duration-300 transform hover:scale-105 bg-gray-800/50 backdrop-blur-sm hover:bg-gray-700/50 cursor-pointer">
            Learn more
          </button>
        </a>
      </div>
    </div>


  </div>
</section>

<script>
  // Add smooth scrolling and parallax effect
  document.addEventListener('scroll', () => {
    const scrolled = window.pageYOffset;
    const parallax = document.querySelector('.grid-pattern') as HTMLElement | null;
    if (parallax) {
      parallax.style.transform = `translateY(${scrolled * 0.5}px)`;
    }
  });
</script>
